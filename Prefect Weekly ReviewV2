    <div class="container">
        <div class="header">
            <h1>üìö Automated Teacher Lesson Planner</h1>
            <div class="teacher-selector">
                <select id="teacherSelect" onchange="loadTeacherSchedule()">
                    <option value="">Select Teacher</option>
                </select>
            </div>
            <div class="week-navigator">
                <button onclick="changeWeek(-1)">‚Üê Previous Week</button>
                <div class="week-display" id="weekDisplay"></div>
                <button onclick="changeWeek(1)">Next Week ‚Üí</button>
            </div>
        </div>

        <div class="teacher-info" id="teacherInfo" style="display: none;">
            <div class="info-card">
                <div class="info-label">Teacher Name</div>
                <div class="info-value" id="displayTeacherName"></div>
            </div>
            <div class="info-card">
                <div class="info-label">Department</div>
                <div class="info-value" id="displayDepartment"></div>
            </div>
            <div class="info-card">
                <div class="info-label">Total Classes</div>
                <div class="info-value" id="displayTotalClasses"></div>
            </div>
        </div>

        <div class="planner-body">
            <div id="plannerDays"></div>
            <button class="print-btn" onclick="window.print()">üñ®Ô∏è Print Lesson Plan</button>
        </div>
    </div>

    <script>
        // Teacher database with their subjects and classes
        const teachersData = {
            "Ms. Sham": {
                department: "Mathematics",
                classes: [
                    { class: "Avon", subject: "Mathematics", day: "Monday" },
                    { class: "Danube", subject: "Mathematics", day: "Wednesday" },
                    { class: "Grade 5B", subject: "Mathematics", day: "Monday" },
                    { class: "Grade 5B", subject: "Mathematics", day: "Thursday" },
                    { class: "Grade 6A", subject: "Mathematics", day: "Tuesday" },
                    { class: "Grade 6A", subject: "Mathematics", day: "Friday" }
                ]
            },
            "Mr. Mohan": {
                department: "Science",
                classes: [
                    { class: "Grade 7A", subject: "Physics", day: "Monday" },
                    { class: "Grade 7A", subject: "Physics", day: "Wednesday" },
                    { class: "Grade 7B", subject: "Physics", day: "Tuesday" },
                    { class: "Grade 8A", subject: "Chemistry", day: "Thursday" },
                    { class: "Grade 8A", subject: "Chemistry", day: "Friday" }
                ]
            },
            "Ms. Husna": {
                department: "English Language",
                classes: [
                    { class: "Grade 4A", subject: "English", day: "Monday" },
                    { class: "Grade 4A", subject: "English", day: "Wednesday" },
                    { class: "Grade 4A", subject: "English", day: "Friday" },
                    { class: "Grade 4B", subject: "English", day: "Tuesday" },
                    { class: "Grade 4B", subject: "English", day: "Thursday" }
                ]
            },
            "Ms. Vithiyaa": {
                department: "History & Social Studies",
                classes: [
                    { class: "Grade 9A", subject: "World History", day: "Monday" },
                    { class: "Grade 9A", subject: "World History", day: "Thursday" },
                    { class: "Grade 10A", subject: "Geography", day: "Tuesday" },
                    { class: "Grade 10B", subject: "Geography", day: "Wednesday" },
                    { class: "Grade 10B", subject: "Geography", day: "Friday" }
                ]
            },
            "Ms. Lisa Anderson": {
                department: "Computer Science",
                classes: [
                    { class: "Grade 8A", subject: "Programming", day: "Monday" },
                    { class: "Grade 8B", subject: "Programming", day: "Tuesday" },
                    { class: "Grade 9A", subject: "Web Development", day: "Wednesday" },
                    { class: "Grade 9B", subject: "Web Development", day: "Thursday" }
                ]
            }
        };

        const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'];
        let currentWeekOffset = 0;

        // Initialize
        function init() {
            populateTeacherDropdown();
            updateWeekDisplay();
        }

        function populateTeacherDropdown() {
            const select = document.getElementById('teacherSelect');
            Object.keys(teachersData).forEach(teacher => {
                const option = document.createElement('option');
                option.value = teacher;
                option.textContent = teacher;
                select.appendChild(option);
            });
        }

        function getWeekDates(offset = 0) {
            const today = new Date();
            const currentDay = today.getDay();
            const diff = currentDay === 0 ? -6 : 1 - currentDay; // Adjust to Monday
            
            const monday = new Date(today);
            monday.setDate(today.getDate() + diff + (offset * 7));
            
            const friday = new Date(monday);
            friday.setDate(monday.getDate() + 4);
            
            return { monday, friday };
        }

        function formatDate(date) {
            const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            return `${months[date.getMonth()]} ${date.getDate()}, ${date.getFullYear()}`;
        }

        function updateWeekDisplay() {
            const { monday, friday } = getWeekDates(currentWeekOffset);
            document.getElementById('weekDisplay').textContent = 
                `${formatDate(monday)} - ${formatDate(friday)}`;
        }

        function changeWeek(direction) {
            currentWeekOffset += direction;
            updateWeekDisplay();
            const teacher = document.getElementById('teacherSelect').value;
            if (teacher) {
                loadTeacherSchedule();
            }
        }

        function getDayDate(dayName, weekOffset = 0) {
            const dayIndex = days.indexOf(dayName);
            const { monday } = getWeekDates(weekOffset);
            const date = new Date(monday);
            date.setDate(monday.getDate() + dayIndex);
            return date;
        }

        function loadTeacherSchedule() {
            const teacherName = document.getElementById('teacherSelect').value;
            if (!teacherName) {
                document.getElementById('teacherInfo').style.display = 'none';
                document.getElementById('plannerDays').innerHTML = '';
                return;
            }

            const teacher = teachersData[teacherName];
            
            // Update teacher info
            document.getElementById('teacherInfo').style.display = 'grid';
            document.getElementById('displayTeacherName').textContent = teacherName;
            document.getElementById('displayDepartment').textContent = teacher.department;
            document.getElementById('displayTotalClasses').textContent = teacher.classes.length;

            // Generate schedule
            const plannerDays = document.getElementById('plannerDays');
            plannerDays.innerHTML = '';

            days.forEach(day => {
                const dayClasses = teacher.classes.filter(c => c.day === day);
                const dayDate = getDayDate(day, currentWeekOffset);
                const dateStr = formatDate(dayDate);
                const dateInput = dayDate.toISOString().split('T')[0];

                const daySection = document.createElement('div');
                daySection.className = 'day-section';

                let lessonsHTML = '';
                if (dayClasses.length === 0) {
                    lessonsHTML = '<div class="no-lessons">No classes scheduled for this day</div>';
                } else {
                    dayClasses.forEach((classInfo, index) => {
                        lessonsHTML += `
                            <div class="lesson-entry">
                                <div class="lesson-header-row">
                                    <div class="class-subject">
                                        ${classInfo.class} - ${classInfo.subject}
                                    </div>
                                    <div class="date-display">${dateStr}</div>
                                </div>
                                <div class="lesson-content">
                                    <div class="input-group">
                                        <label>Topic:</label>
                                        <input type="text" placeholder="Enter main topic for this lesson">
                                    </div>
                                    <div class="input-group">
                                        <label>Sub-topics:</label>
                                        <textarea placeholder="Enter sub-topics, learning objectives, or key points to cover"></textarea>
                                    </div>
                                    <div class="input-group">
                                        <label>Notes:</label>
                                        <textarea placeholder="Additional notes, homework assignments, or reminders"></textarea>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                }

                daySection.innerHTML = `
                    <div class="day-header">
                        <span>${day}</span>
                        <span>${dateStr}</span>
                    </div>
                    ${lessonsHTML}
                `;

                plannerDays.appendChild(daySection);
            });
        }

        // Initialize on page load
        init();
    </script>
</body>
</html>
